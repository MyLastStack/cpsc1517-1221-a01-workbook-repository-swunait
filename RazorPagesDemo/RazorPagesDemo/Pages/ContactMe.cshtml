@page
@model RazorPagesDemo.Pages.ContactMeModel
@{
}

@if (Model.InfoMessage is not null)
{
    <div class="alert alert-info">
        @Html.Raw(Model.InfoMessage)
    </div>
}

@if (Model.ErrorMessage is not null)
{
    <div class="alert alert-info">
        @Html.Raw(Model.InfoMessage)
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label asp-for="ContactName" class="col-sm-2 col-form-label">Contact Name</label>
        <div class="col-sm-10">
            <input type="text" asp-for="ContactName" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="ContactEmail" class="col-sm-2 col-form-label">Your Name</label>
        <div class="col-sm-10">
            <input type="text" asp-for="ContactEmail" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="ContactComments" class="col-sm-2 col-form-label">CYour Comments</label>
        <div class="col-sm-10">
            <textarea asp-for="ContactComments" 
                rows="5" cols="50" 
                class="form-control">
            </textarea>
        </div>
    </div>
</form>